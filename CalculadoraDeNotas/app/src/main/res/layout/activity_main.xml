<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#829C9F"
    tools:context=".MainActivity">




    <EditText
        android:id="@+id/nota1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="80dp"
        android:background="#92BF5D"
        android:ems="10"
        android:hint="@string/nota1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nota2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:background="#92BF5D"
        android:ems="10"
        android:hint="@string/nota2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nota1" />

    <EditText
        android:id="@+id/numerofaltas"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:background="#92BF5D"
        android:ems="10"
        android:hint="@string/numerofaltas"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nota2" />

    <TextView
        android:id="@+id/notafinal"
        android:layout_width="294dp"
        android:layout_height="115dp"
        android:background="#829C9F"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/botaocalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerofaltas"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/botaocalcular"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:text="@string/calcular_nota"
        app:backgroundTint="#215323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>